html, body, .app
    width 100%
    height 100%
    margin 0
    padding 0
    overflow hidden

#content-wrapper
    position absolute
    top 125px + 31px
    bottom 100px
    left 0
    right 0
    @media screen and (max-width: 600px)
        top 47px

#content, #content #content-map
    position absolute
    padding 0
    top 0
    bottom 0
    right 0
    left 0
    height auto

#footer-wrapper
    position absolute
    bottom 0

.app [data-dojo-attach-point=mapDiv]
        position absolute
        top 0
        bottom 0
        left 0
        right 0
        .toolbar
            position absolute
            top 20px
            z-index 50
            .HomeButton
                position inherit
                left 90px
            .home, .toolbar-item
                width 28px
                height 28px
                &:hover
                    background-color #333
                    background-color rgba(102, 102, 102, 0.90)
                &:active
                    background-color #ccc
                    background-color rgba(102, 102, 102, 0.60)
        .agrc .selectorMain
            top 17px
            right 10px
